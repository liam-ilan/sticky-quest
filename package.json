{
    "name": "sticky",
    "displayName": "Sticky",
    "version": "1.0.0",
    "description": "A puzzle game where you can only move when you touch a wall.",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "friend": "echo \"hi\"",
        "watch": "nodemon --exec \"cordova prepare\"",
        "start": "cordova serve",
        "surge": "cd platforms/browser/www && surge && cd ../../..",
        "lint": "./node_modules/.bin/eslint ./www/js/index.js --fix"
    },
    "author": "Liam Ilan",
    "license": "Apache-2.0",
    "dependencies": {
        "cordova-browser": "^5.0.3",
        "cordova-ios": "^4.5.5",
        "cordova-plugin-whitelist": "^1.3.3"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "browser",
            "ios"
        ]
    },
    "devDependencies": {
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^17.0.0",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-react": "^7.10.0",
        "nodemon": "^1.18.3"
    }
}